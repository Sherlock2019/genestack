# Genestack Intelligence Suite - Environment Variables
# Copy this file to .env and customize for your environment

# ============================================================
# Server Configuration
# ============================================================

# Port to run the dashboard on
GENESTACK_PORT=8600

# Server address to bind to (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
GENESTACK_ADDRESS=0.0.0.0

# ============================================================
# Feature Flags
# ============================================================

# Enable automatic dashboard screenshot capture
GENESTACK_SCREENSHOTS=false

# Enable drift detection report generation
GENESTACK_DRIFT=true

# Enable contributor heatmap generation
GENESTACK_HEATMAP=true

# Enable automatic git commits for screenshots (for development)
GENESTACK_GIT_COMMITS=false

# ============================================================
# Notifications
# ============================================================

# Slack Webhook URL (get from Slack App settings)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Enable Slack notifications
GENESTACK_ENABLE_SLACK=false

# Microsoft Teams Webhook URL (get from Teams channel settings)
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Enable Teams notifications
GENESTACK_ENABLE_TEAMS=false

# ============================================================
# Screenshot Configuration
# ============================================================

# Timeout for dashboard to become ready (seconds)
GENESTACK_PREVIEW_TIMEOUT=60

# Wait time for UI to stabilize before capture (seconds)
GENESTACK_PREVIEW_STABILIZE=15

# ============================================================
# Advanced Configuration
# ============================================================

# Python executable to use
GENESTACK_PYTHON=python3

# Additional Streamlit arguments
# GENESTACK_STREAMLIT_ARGS="--server.enableCORS=false --server.enableXsrfProtection=false"

# ============================================================
# GitHub API (for version resolution)
# ============================================================

# GitHub Personal Access Token (optional, increases API rate limits)
# GITHUB_TOKEN=ghp_your_token_here
